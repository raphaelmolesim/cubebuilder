<div class="well col-lg-offset-3 col-lg-6">
<%= form_for(cube, html: {class: "form-horizontal"}) do |f| %>
  <legend><%= title %></legend>
  <% if cube.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cube.errors.count, "error") %> prohibited this cube from being saved:</h2>

      <ul>
      <% cube.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-lg-2" %>
    <div class="col-lg-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit "Submit", class: "btn btn-primary" %>
      
      <%= link_to 'Back', cubes_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
</div>
