<div class="card">
		<h4>
      <div class="dropdown">
  			<a href="#" class="dropdown-toggle" data-toggle="dropdown">
          {{ card.name }}
        </a> - {{ card.manaCost }}
      
        <ul class="dropdown-menu">
          {{#each archetypes }}
          <li>
            <a href="#" class="add-card" data-toggle="tab" data-id="{{ id }}" data-cardid="{{ ../card.id }}">
              {{ name }}
            </a>
          </li>
          {{/each }}
          {{#if delete_option }}
          <li class="divider"></li>
          <li>
            <a href="#" class="remove-card" data-toggle="tab" data-cardid="{{ card.id }}">
              Remove from Cube
            </a>
          </li>
          {{/if}}
        </ul>
      </div>
		</h4>
		<span>{{#each card.types_list }} {{ this }} {{/each}}</span>
		<p>{{ card.text }} </p>
    {{#if card.power }}<p style="text-align: right">{{ card.power }} / {{ card.toughness }}</p>{{/if}}
    
    <input type="checkbox" data-id="{{ card.id }}" class="add-wishlist">&nbsp;Add to wishlist</label>
    
</div>
{{#if others }}
  Other results:
  <ul>
  {{#each others }}
    <li><a href="#" class="show_card" data-id="{{ id }}">{{ name }}</li>
  </ul>
  {{/each}}
{{/if }}